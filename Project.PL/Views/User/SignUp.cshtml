@model SignUpVM
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Layout/UserLayout.cshtml";
}

<form asp-controller="User" asp-action="SignUp" class="form-group">
    <div class="msg">Register a new membership</div>
    <div class="input-group">
        <span class="input-group-addon">
            <i class="material-icons">person</i>
        </span>
        <div class="form-line">
            <input type="text" asp-for="UserName" class="form-control" placeholder="Name Surname" required autofocus>
            <span asp-validation-for="UserName" class="text-danger font-bold"></span>
        </div>
    </div>
    <div class="input-group">
        <span class="input-group-addon">
            <i class="material-icons">email</i>
        </span>
        <div class="form-line">
            <input type="email" asp-for="Email" class="form-control" placeholder="Email Address" required>
            <span asp-validation-for="Email" class="text-danger font-bold"></span>
        </div>
    </div>
    <div class="input-group">
        <span class="input-group-addon">
            <i class="material-icons">lock</i>
        </span>
        <div class="form-line">
            <input type="password" asp-for="Password" class="form-control" minlength="6" placeholder="Password" required>
            <span asp-validation-for="Password" class="text-danger font-bold"></span>
        </div>
    </div>
    <div class="input-group">
        <span class="input-group-addon">
            <i class="material-icons">lock</i>
        </span>
        <div class="form-line">
            <input type="password" asp-for="ConfirmPassword" class="form-control" minlength="6" placeholder="Confirm Password" required>
            <span asp-validation-for="ConfirmPassword" class="text-danger font-bold"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="checkbox" asp-for="IAgree" class="filled-in chk-col-pink">
        <label asp-for="IAgree">I read and agree to the <a href="javascript:void(0);">terms of usage</a>.</label>
    </div>

    <input type="submit" value="SIGN UP" class="btn btn-block btn-lg bg-pink waves-effect" />
    <div class="m-t-25 m-b--5 align-center">
        <a asp-controller="User" asp-action="SignIn">You already have a membership?</a>
    </div>
</form>

