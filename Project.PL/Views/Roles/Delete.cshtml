@model IdentityRole
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}

<form asp-action="Delete" asp-controller="Roles" class="form-group">

    <div asp-validation-summary="All" class="text-danger font-bold"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ConcurrencyStamp" />
    <label asp-for="Name">Role Name</label>
    <br />
    <input type="text" asp-for="Name" class="form-control" readonly />
    <span asp-validation-for="Name" class="text-danger font-bold"></span>
    <br />
    <center>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-controller="Roles" asp-action="GetRoles" class="btn btn-outline-warning">Cancel</a>
    </center>
</form>

@section JqueryValidation {
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

