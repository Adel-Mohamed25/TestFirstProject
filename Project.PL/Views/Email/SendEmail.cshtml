@model EmailVM
@{
    ViewData["Title"] = "SendEmail";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}

<h2>Send Email</h2>
<br />
<br />
<h3 >@ViewBag.Message</h3>
<br />
<br />

<form asp-controller="Email" asp-action="SendEmail" class="form-group">
     <label asp-for="Email">Email</label>
    <br />
    <input type="text" asp-for="Email" class="form-control"/>
    <span asp-validation-for="Email" class="text-danger font-bold"></span>
    <br />

    <label asp-for="Title">Title</label>
    <br />
    <input type="text" asp-for="Title" class="form-control"/>
    <span asp-validation-for="Title" class="text-danger font-bold"></span>
    <br />

    <label asp-for="Message">Message</label>
    <br />
    <textarea asp-for="Message" class="form-control"></textarea>
    <span asp-validation-for="Message" class="text-danger font-bold"></span>
    <br />
    <br />
    <center>
        <input type="submit" value="Send" class="btn btn-pink btn-block btn-primary" />
    </center>
</form>

@section JqueryValidation {
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}