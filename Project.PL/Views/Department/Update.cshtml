@model DepartmentVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}

<form asp-action="Update" asp-controller="Department" class="form-group">
    <input type="hidden"  asp-for="Department_Id"/>
    <label asp-for="Department_Name">Department Name</label>
    <br />
    <input type="text" asp-for="Department_Name" class="form-control" />
    <span asp-validation-for="Department_Name" class="text-danger font-bold"></span>
    <br />
    <label asp-for="Department_Code">Department Code</label>
    <br />
    <input type="text" asp-for="Department_Code" class="form-control" />
    <span asp-validation-for="Department_Code" class="text-danger font-bold"></span>
    <br />
    <center>
        <input type="submit" value="Save" class="btn btn-success" />
        <input type="reset" value="Cancel" class="btn btn-warning" />
        <a asp-controller="Department" asp-action="Delete" asp-route-id ="@Model.Department_Id" class="btn btn-danger">Delete</a>
    </center>
</form>

@section JqueryValidation {
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}