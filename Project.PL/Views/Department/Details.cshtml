@model DepartmentVM
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}

<form asp-action="Create" asp-controller="Department" class="form-group">
    <label asp-for="Department_Name">Department Name</label>
    <br />
    <input type="text" class="form-control" asp-for="Department_Name" readonly />
    <br />
    <lable asp-for="Department_Code">Department Code</lable>
    <br />
    <input type="text" class="form-control" asp-for="Department_Code" readonly />
    <br />
    <center>
        <a asp-controller="Department" asp-action="DepartmentServices" class="btn btn-success">Return</a>
        <a asp-controller="Department" asp-action="Update" asp-route-id="@Model.Department_Id" class="btn btn-warning">Update</a>
        <a asp-controller="Department" asp-action="Delete" asp-route-id="@Model.Department_Id"  class="btn btn-danger">Delete</a>
    </center>
</form>


